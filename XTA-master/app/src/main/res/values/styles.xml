<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="StartUpTheme" parent="AppTheme">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CollapsingToolbarLayoutExpandedTextStyle" parent="AppTheme">
        <item name="android:textColor">@android:color/transparent</item>
        <item name="android:textSize">0.1sp</item>
    </style>

    <style name="SearchView" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">#787878</item>
        <item name="floatingSearch_backgroundColor">#787878</item>
        <item name="floatingSearch_viewTextColor">#eeeeee</item>
        <item name="floatingSearch_hintTextColor">#aaaaaa</item>
        <item name="floatingSearch_dividerColor">#eeeeee</item>
        <item name="floatingSearch_clearBtnColor">#eeeeee</item>
        <item name="floatingSearch_leftActionColor">#eeeeee</item>
        <item name="floatingSearch_menuItemIconColor">#eeeeee</item>
        <item name="floatingSearch_suggestionRightIconColor">#eeeeee</item>
        <item name="floatingSearch_actionMenuOverflowColor">#eeeeee</item>
    </style>

    <style name="FloatingStyle" parent="@android:style/TextAppearance">
        <item name="android:textColor">#9e9e9e</item>
    </style>

</resources>
